@model IEnumerable<DoAnCuoiKiNhom3BanDienThoaiDiDong_API.DTOs.OrderDetail>

<h2>Danh sách Chi Tiết Đơn Hàng</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>ID Đơn Hàng</th>
            <th>ID Sản Phẩm</th>
            <th>Giá Sản Phẩm</th>
            <th>Số Lượng</th>
            <th>Tổng Giá</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var detail in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@detail.OrderId</td>
                    <td>@detail.ProductId</td>
                    <td>@detail.ProductPrice</td>
                    <td>@detail.Quantity</td>
                    <td>@detail.TotalPrice</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@detail.Id" class="btn btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@detail.Id" class="btn btn-warning">Chỉnh sửa</a>
                        <form asp-action="Delete" asp-route-id="@detail.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Không có chi tiết đơn hàng nào để hiển thị.</td>
            </tr>
        }
    </tbody>
</table>
