@model DoAnCuoiKiNhom3BanDienThoaiDiDong_Admin.Models.Product

<h2>Chỉnh Sửa Sản Phẩm</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Tên sản phẩm</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Price">Giá</label>
        <input type="number" class="form-control" id="Price" name="Price" value="@Model.Price" required />
    </div>
    <div class="form-group">
        <label for="Image1">URL Hình ảnh 1</label>
        <input type="url" class="form-control" id="Image1" name="Image1" value="@Model.Image1" />
    </div>
    <div class="form-group">
        <label for="Image2">URL Hình ảnh 2</label>
        <input type="url" class="form-control" id="Image2" name="Image2" value="@Model.Image2" />
    </div>
    <div class="form-group">
        <label for="Description">Mô tả</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="CategoryId">Loại sản phẩm</label>
        <input type="number" class="form-control" id="CategoryId" name="CategoryId" value="@Model.CategoryId" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
