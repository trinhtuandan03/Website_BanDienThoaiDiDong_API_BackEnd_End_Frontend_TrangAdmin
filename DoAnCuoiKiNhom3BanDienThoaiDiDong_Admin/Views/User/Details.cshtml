@model DoAnCuoiKiNhom3BanDienThoaiDiDong_Admin.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Người Dùng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Chi Tiết Người Dùng</h2>

        @if (Model == null)
        {
            <div class="alert alert-danger text-center">
                Không thể hiển thị thông tin chi tiết người dùng. Vui lòng thử lại sau.
            </div>
            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </div>
        }
        else
        {
            <div class="card mt-4">
                <div class="card-header bg-primary text-white">
                    <h4>Thông Tin Người Dùng</h4>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @Model.Id</p>
                    <p><strong>Tên Người Dùng:</strong> @Model.UserName</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Số Điện Thoại:</strong> @Model.PhoneNumber</p>
                    <p><strong>Chữ Ký:</strong> @Model.Initials</p>
                    <p><strong>Mật Khẩu (Hash):</strong> @Model.Password</p>
                    <p><strong>Vai Trò:</strong> @Model.Role</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                </div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
