@model IEnumerable<DoAnCuoiKiNhom3BanDienThoaiDiDong_Admin.Models.User>

<h2 class="mt-4">Danh sách Người Dùng</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Thêm Người Dùng</a>
</div>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>STT</th>
            <th>Tên Người Dùng</th>
            <th>Email</th>
            <th>Số Điện Thoại</th>
            <th>Chữ Ký</th>
            <th>Mật Khẩu</th>
            <th>Vai Trò</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int index = 1;
            foreach (var user in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Initials</td>
                    <td>@user.Password</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Chi tiết</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Chỉnh sửa</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
                index++;
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">Không có danh sách người dùng nào để hiển thị.</td>
            </tr>
        }
    </tbody>
</table>
